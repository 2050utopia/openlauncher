<?xml version="1.0" encoding="utf-8"?><!--suppress AndroidElementNotAllowed -->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/pref_key_dock_enable"
        android:title="Enable dock" />

    <PreferenceCategory android:title="@string/pref_title_size">

        <com.benny.openlauncher.widget.NumberPickerPreference
            android:defaultValue="5"
            android:key="@string/pref_key_dock_size"
            android:summary="@string/pref_summary_dock_size"
            android:title="@string/pref_title_dock_size"
            app:maxValue="10"
            app:minValue="2" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_title_appearance">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_key_dock_show_label"
            android:summary="@string/pref_summary_dock_show_label"
            android:title="@string/pref_title_dock_show_label" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_title_color">

        <com.jaredrummler.android.colorpicker.ColorPreference
            android:defaultValue="@color/transparent"
            android:key="@string/pref_key_dock_background_color"
            android:title="@string/pref_title_dock_background_color"
            app:cpv_dialogTitle="@string/pref_title_dock_background_color"
            app:cpv_showAlphaSlider="true" />

    </PreferenceCategory>
</PreferenceScreen>
